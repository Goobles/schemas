{
  "type": "object",
  "title": "Project Definition Object",
  "properties": {
    "namespace": {
      "type": "string"
    },
    "packageDirectories": {
      "type": "array",
      "items": {
        "type": "object",

        "anyOf": [
          {
            "title": "pckg2",
            "type": "object",
            "allOf": [
              {
                "properties": {
                  "pid": {
                    "type": "string",
                    "title": "package id"
                  },
                  "versionName": {
                    "type": "string",
                    "title": "package version"
                  },
                  "versionDescription": {
                    "type": "string",
                    "title": "long version ver 1.2 - anc = 1.1",
                    "description": "Human readable version information, format not specified."
                  },
                  "versionNumber": {
                    "type": "string",
                    "title": "symantic version",
                    "description": "Symantic package version - 1.2.0.NEXT"
                  },
                  "ancestorId": {
                    "type": "string",
                    "title": "Id of previous package version"
                  }
                }
              }
            ]
          },
          {
            "anyOf": [
              {
                "properties": {
                  "pdependencies": {
                    "type": "array",
                    "title": "package dependencies",
                    "items": [
                      {
                        "packageId": {
                          "type": "string",
                          "title": "dependent package id"
                        },
                        "versionNumber": {
                          "type": "string",
                          "title": "dependent package version"
                        }
                      }
                    ]
                  }
                }
              }
            ]
          },
          {
            "title": "pathdefault",
            "type": "object",
            "allOf": [
              {
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "default": {
                    "type": "boolean"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    "sourceApiVersion": {
      "type": "string",
      "default": "41.0"
    },
    "sfdxLoginUrl": {
      "type": "string",
      "default": "https://login.salesforce.com"
    }
  },
  "required": ["packageDirectories", "sfdxLoginUrl", "sourceApiVersion"],
  "dependencies": {
    "pid": "versionName"
  }
}
